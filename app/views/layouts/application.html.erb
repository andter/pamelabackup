<!DOCTYPE html>
<html>
<head>
	<%= favicon_link_tag 'favi.ico' %>
  <title>PamelaBeckerPhotography
		<%if !@title.nil?%>
			| <%= @title	%>
		<% end %>
	</title>
  <%= stylesheet_link_tag    "application", media: "all"%>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if !flash.nil? %>
<div class="myflash">
<% flash.each do |key, value| %>
<%= value %>
<% end %>
<% end %>
</div>
<div class="top">
<div class="left">
<% if current_user.present? %>
<%= current_user.email %>
<% end %>
</div>
<div class="right">
	<% if user_signed_in? %>
		<%= link_to "Logout", "/logout" %>
	<% else %>
	<%= link_to "Login", new_user_session_path %> | 
	<%=	link_to "Signup", new_user_path%>
	<% end %>
	</div>
</div>
</br></br>
<div class="fancyheader">
Pamela Becker
</div></br>
<div class="fancy">
Photography
</div>
<div class="row-fluid">
	<div class="span3">
	</div>
	<ul id="navbar">
		<li><%= link_to "Home", "/home", class:"bar" %></li>
		<li><%= link_to "Gallery", "/gallery", class:"bar"%></li>
		<li><%= link_to "Packages", "/packages", class:"bar" %></li>
		<li><%= link_to "Contact Me", new_message_path, class:"bar" %></li>
		<li><%= link_to "Dashboard", "/dashboard", class:"bar" %></li>
	</ul>
	</div>
</div>
<div class="main">
	<div class="row-fluid">
		<%= yield %>
	</div>
</div>
</div>
</br>
</br>
</div>
</br>
<% if is_admin? %>
<div class="row-fluid">
<div class="span9">
</div>
<div class="span3">
<div class="adminClass">
<div id="adminArrow"></div>
<div class="admin">
Admin Toolbar</br>
<div class="adminbtn">
<%= link_to "Users", users_path, class:"adminLink"%></br>
<%= link_to "Add Post",new_post_path, class:"adminLink"%></br>
<%= link_to "Add Gallery Image", new_user_photo_path(1), class:"adminLink"%>
</div>
</div>
</div>
</div>
</div>
<% end %>
</body>
</html>
