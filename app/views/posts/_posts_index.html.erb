<% @posts.each do |post| %>
	<h4><%= link_to post.title, post, class:"black" %></h4>
	<%= post.content %>
	</br>
	<%= link_to "Edit", edit_post_path(post)%> |
	<%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %>
<% end %>
</br>
</br>
<% if is_admin? %>
<%= link_to "Add a new Post", new_post_path %>
<% end %>
